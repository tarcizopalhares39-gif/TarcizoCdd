    <div class="sys-init">>> SYSTEM INITIALIZATION... TICKET ALIMENTAÇÃO ONLINE</div>

    <div class="container">
        <div class="bolt-icon">⚡</div>
        <h2>Projeção de Gastos</h2>
        
        <div class="input-group">
            <label for="saldoAtual">SALDO ATUAL NO APP (R$)</label>
            <input type="number" id="saldoAtual" placeholder="0.00" step="0.01" oninput="calcularProjecao()">
        </div>

        <div class="info-panel">
            <div class="days-left" id="diasRestantesTexto">
                Dias até o próximo dia 13: <span class="days-highlight" id="diasCount">--</span>
            </div>
            
            <div class="result-container">
                <div class="result-label">Cota Diária Projetada</div>
                <div class="result-value" id="valorProjetado">R$ 0,00</div>
            </div>
        </div>
    </div>

    <script>
        // Função para calcular os dias até o próximo dia 13
        function getDiasAteProximo13() {
            const hoje = new Date();
            let proximo13 = new Date(hoje.getFullYear(), hoje.getMonth(), 13);

            // Se hoje for dia 13 ou depois, o próximo alvo é o dia 13 do mês seguinte
            if (hoje.getDate() >= 13) {
                proximo13.setMonth(proximo13.getMonth() + 1);
            }

            // Calcula a diferença em milissegundos e converte para dias
            const diferencaTempo = proximo13.getTime() - hoje.getTime();
            const diferencaDias = Math.ceil(diferencaTempo / (1000 * 3600 * 24));
            
            return diferencaDias;
        }

        let diasRestantes = getDiasAteProximo13();
        document.getElementById('diasCount').innerText = diasRestantes;

        // Variável para armazenar a animação atual e evitar conflitos se o usuário digitar rápido
        let animationFrameId;

        function calcularProjecao() {
            const inputSaldo = document.getElementById('saldoAtual').value;
            const saldo = parseFloat(inputSaldo);
            const displayValor = document.getElementById('valorProjetado');

            if (isNaN(saldo) || saldo <= 0) {
                displayValor.innerText = "R$ 0,00";
                displayValor.className = "result-value"; // Reseta as cores
                return;
            }

            const valorDiario = saldo / diasRestantes;
            
            // Define a classe de cor baseada no valor
            let classeCor = "";
            if (valorDiario >= 50) {
                classeCor = "status-green";
            } else if (valorDiario >= 35 && valorDiario < 50) {
                classeCor = "status-yellow";
            } else {
                classeCor = "status-red";
            }

            // Inicia a animação dos números
            animarNumeros(displayValor, valorDiario, classeCor);
        }

        // Função para criar o efeito "Counter" (os números rodando até o resultado)
        function animarNumeros(elemento, valorFinal, classeCor) {
            let startTimestamp = null;
            const duration = 800; // Duração da animação em milissegundos
            const valorInicial = 0;

            // Cancela a animação anterior se houver
            if (animationFrameId) cancelAnimationFrame(animationFrameId);

            // Aplica a cor imediatamente para dar o feedback visual
            elemento.className = `result-value ${classeCor}`;

            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                
                // Efeito de desaceleração suave (ease-out)
                const easeOutProgress = progress * (2 - progress);
                const valorAtual = valorInicial + (valorFinal - valorInicial) * easeOutProgress;

                // Formata para moeda brasileira
                elemento.innerText = `R$ ${valorAtual.toFixed(2).replace('.', ',')}`;

                if (progress < 1) {
                    animationFrameId = requestAnimationFrame(step);
                } else {
                    // Garante que o valor final seja exato no final da animação
                    elemento.innerText = `R$ ${valorFinal.toFixed(2).replace('.', ',')}`;
                }
            };

            animationFrameId = requestAnimationFrame(step);
        }
    </script>
